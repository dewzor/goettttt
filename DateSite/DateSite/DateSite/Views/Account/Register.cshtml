@model DateSite.Models.RegisterModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Styles.Render("~/Content/registerStyle.css");
}


<div class="content-wrapper">


    <div class="form-layout col-md-12">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)


            <div class="row">

                <div class="col-md-3"></div>
                <div class="col-md-3">
                    @Html.DisplayNameFor(x => x.Firstname)
                    @Html.TextBoxFor(x => x.Firstname, new { @class = "register-textbox" })
                    @Html.ValidationMessageFor(x => x.Firstname)

                    @Html.DisplayNameFor(x => x.Lastname)
                    @Html.TextBoxFor(x => x.Lastname, new { @class = "register-textbox" })
                    @Html.ValidationMessageFor(x => x.Lastname)

                    @Html.DisplayNameFor(x => x.Email)
