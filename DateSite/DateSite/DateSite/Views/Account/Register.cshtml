                    @Html.ValidationMessageFor(x => x.Email)

                    @Html.DisplayNameFor(x => x.Password)
                    @Html.TextBoxFor(x => x.Password, new { @class = "register-textbox" })
                    @Html.ValidationMessageFor(x => x.Password)


                    @Html.DisplayNameFor(x => x.PasswordMatch)
                    @Html.TextBoxFor(x => x.PasswordMatch, new { @class = "register-textbox" })
                    @Html.ValidationMessageFor(x => x.PasswordMatch)
                </div>
                <div class="col-md-3">


                    @Html.DisplayNameFor(x => x.Username)
                    @Html.TextBoxFor(x => x.Username, new { @class = "register-textbox" })
                    @Html.ValidationMessageFor(x => x.Username)

                    @Html.DisplayNameFor(x => x.Age)
                    @Html.TextBoxFor(x => x.Age, new { @class = "register-textbox" })
                    @Html.ValidationMessageFor(x => x.Age)

                    @Html.DisplayNameFor(x => x.About)
                    @Html.TextBoxFor(x => x.About, new { @class = "register-textbox" })
                    @Html.ValidationMessageFor(x => x.About)

                    @Html.DisplayNameFor(x => x.Gender)
                    @Html.DropDownListFor(x => x.Gender,
                  new List<SelectListItem> {
                       new SelectListItem { Value = "Male" , Text = "Male" },
                       new SelectListItem { Value = "Female" , Text = "Female" }
                    },
                  new { @class = "register-textbox dropdown" })
                    @Html.ValidationMessageFor(x => x.Gender) 

                </div>
                <div class="col-md-3"></div>
               
            </div>
            <div class="col-md-12"><input type="submit" value="Register" id="registerBtn" /></div>


        }

    </div>

